!  -*-f90-*-  (for Emacs)    vim:set filetype=fortran:  (for vim)
!
!  run parameters for forced helical MHD turbulence
!
&run_pars
  nt=10000, it1=100, isave=500, itorder=3
  dsnap=.00005, dvid=.5, ialive=20 dspec=0.0005, ou_spec=T, ab_spec=T, GWs_spec=T, GWh_spec=T, sp_spec=T
  Str_spec=T, SCL_spec=T, VCT_spec=T, Tpq_spec=T
  iproc_pt=0, lpoint = 7, mpoint = 7, npoint = 7
  iproc_p2=0, lpoint2=11, mpoint2=11, npoint2=11
  lpencil_check_small=F
  cdt=.4, dtmin=1d-20,
  /
&eos_run_pars
/
&hydro_run_pars
  lupw_uu=T
/
&density_run_pars
  lupw_lnrho=T
/
&magnetic_run_pars
  iresistivity='eta-const', eta=1.000000e-06
  lupw_aa=T
/
&viscosity_run_pars
  ivisc='nu-const', nu=1e-6
/
&power_spectrum_run_pars
/
&gravitational_waves_hTXk_run_pars
/
&chiral_mhd_run_pars
  diffmu5=1e-6, lambda5=1.0e8, cdtchiral=1.0  
  source5=1.000000e+10, source5_tdep="smooth_source", source5_expt2=5.000000e-02
  t1_source5=1, gammaf5=5.000000e+04
/
